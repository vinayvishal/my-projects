<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>app-client-ear</artifactId>
        <groupId>com.example.ears.app_client_ear</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>helloworld</artifactId>
    <packaging>ear</packaging>

    <dependencies>
        <dependency>
            <groupId>com.example.ears.app_client_ear.ejb_api</groupId>
            <artifactId>ejb-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.example.ears.app_client_ear.app_client</groupId>
            <artifactId>app-client</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>app-client</type>
        </dependency>
        <dependency>
            <groupId>com.example.ears.app_client_ear.ejb_impl</groupId>
            <artifactId>ejb-impl</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>com.example.ears.app_client_ear.war</groupId>
            <artifactId>hello</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>war</type>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <modules>
                        <appClientModule>
                            <groupId>com.example.ears.app_client_ear.app_client</groupId>
                            <artifactId>app-client</artifactId>
                            <moduleId>app-client</moduleId>
                        </appClientModule>
                        <jarModule>
                            <groupId>com.example.ears.app_client_ear.ejb_api</groupId>
                            <artifactId>ejb-api</artifactId>
                        </jarModule>
                        <ejbModule>
                            <groupId>com.example.ears.app_client_ear.ejb_impl</groupId>
                            <artifactId>ejb-impl</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>com.example.ears.app_client_ear.war</groupId>
                            <artifactId>hello</artifactId>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-acr-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>

</project>
